/[if IE 9] <html class="ie9" lang="en">
<!--[if gt IE 9]><!-->
%html{:lang => "en", "data-ready" => "waiting", "data-overflow" => "scrollable"}<>
	<!--<![endif]-->

	= Haml::Engine.new(File.read("dev/haml/partials/_doc_head.haml")).render(Object.new, :locals => 'Projects Single')

	-# shares the same id as projects main... reconsider this? (they do share the same container width... so CSS can be shared)
	%body#projects

		#svgInject.visuallyhidden
			/ inject:svg
			/ endinject

		= Haml::Engine.new(File.read("dev/haml/partials/_html_header.haml")).render(Object.new, :locals => 'projects')

		%main{:role => "main"}

			%section.projects_single

				%article#post_id.projects_post

					.projects_header
						%a.link_projects{:href => "projects.html", :title => "Return to projects page"} See all projects

					%figure.projects_figure

						.wrap_video
							-# &html5=1 &wmode=transparent / :wmode => "Opaque",
							-# &enablejsapi=1
							%iframe{:type => "text/html", :width => "946", :height => "532", :src => "//www.youtube.com/embed/B6zVzWU95Sw?rel=0&showinfo=0", :frameborder => "0", :allowfullscreen => true}

						%figcaption.projects_caption.video_details

							.wrap_titles
								%h3.title_video.truncate "Sandwich Loves Slack"
								%h3.title_client.truncate Slack

							-# should this link to the client's website, if provided?
							.wrap_logo
								%img.logo_client{:src => "assets/img/logo_june-on.png", :alt => "Client Logo"}

					.wrap_content.clearfix

						.wrap_credits
							%h4 Credits
							= Haml::Engine.new(File.read("dev/haml/partials/_con_credits.haml")).render

						%nav.wrap_related.nav_sidebar
							%h4 Related Videos
							%ul.projects_related
								%li
									%a{:href => "#", :title => "See related post"} "June 2.0"
								%li
									%a{:href => "#", :title => "See related post"} "More June Ovens Always"
								%li
									%a{:href => "#", :title => "See related post"} "It's June Again"
								%li
									%a{:href => "#", :title => "See related post"} "Christmas in... June"

		= Haml::Engine.new(File.read("dev/haml/partials/_html_footer.haml")).render